<?xml version="1.0" encoding="utf-8"?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true">
  <targets>
    <target name="ApiRequestLogFile" xsi:type="File" concurrentWrites="true"
            fileName="E:\LogFiles\XProjectNamespaceX\ApiRequest.log"
            archiveFileName="E:\LogFiles\XProjectNamespaceX\archive\ApiRequest-{#}.log"
            archiveEvery="Day" archiveNumbering="DateAndSequence" maxArchiveFiles="7" />
    <target name="BusinessLogicLogFile" xsi:type="File" concurrentWrites="true"
            fileName="E:\LogFiles\XProjectNamespaceX\BusinessLogic.log"
            archiveFileName="E:\LogFiles\XProjectNamespaceX\archive\BusinessLogic-{#}.log"
            archiveEvery="Day" archiveNumbering="DateAndSequence" maxArchiveFiles="7" />
  </targets>

  <rules>
    <logger name="ApiRequest" minlevel="Info" writeTo="ApiRequestLogFile" />
    <logger name="BusinessLogic" minlevel="Info" writeTo="BusinessLogicLogFile" />
  </rules>
</nlog>
